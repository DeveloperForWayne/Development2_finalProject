<div class="row">
    <h1>Balance Update</h1>
    <div class="col-md-9">

        <div class="card" style="margin: 1em;">
            <div class="card-header">
                <h3 class="card-title">Current Balance:
                    <%= ticker.balance %>
                </h3>
            </div>
            <div class="card-body">
                <form action="/portfolio/balance" method="POST">
                <p class="card-title">
                    New Balance: <input type="number" name="balance" class="form-control input-sm chat-input"
                        placeholder="balance" required>
                </p>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="tickerName" value="<%= ticker.tickerName %>">
                <input type="hidden" name="tickerId" value="<%= ticker.tickerId %>">
                <input type="hidden" name="_method" value="PUT" />
                <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>